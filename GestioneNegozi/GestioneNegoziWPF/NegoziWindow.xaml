<Window x:Class="GestioneNegoziWPF.NegoziWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Negozi" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Numero di Negozi:" />
            <TextBox x:Name="NumeroNegoziTextBox" />
            <Button Content="Conferma" Click="ConfermaNumeroNegozi_Click" />
            <TextBlock x:Name="NumeroNegoziTextBlock" />

            <ItemsControl x:Name="NegoziItemsControl" />
            <Button Content="Conferma Nomi Negozi" Click="ConfermaNomiNegozi_Click" />

            <Button Content="Visualizza Statistiche" Click="Statistiche_Click" />
        </StackPanel>
    </Grid>
</Window>
