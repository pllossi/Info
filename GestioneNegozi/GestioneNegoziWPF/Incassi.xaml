<Window x:Class="GestioneNegoziWPF.IncassiWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Incassi" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Seleziona Giorno:" />
            <ComboBox x:Name="GiornoComboBox">
                <ComboBoxItem Content="Lunedì" />
                <ComboBoxItem Content="Martedì" />
                <ComboBoxItem Content="Mercoledì" />
                <ComboBoxItem Content="Giovedì" />
                <ComboBoxItem Content="Venerdì" />
                <ComboBoxItem Content="Sabato" />
                <ComboBoxItem Content="Domenica" />
            </ComboBox>

            <TextBlock Text="Seleziona Negozio:" />
            <ComboBox x:Name="NegozioComboBox" />

            <TextBlock Text="Inserisci Incasso:" />
            <TextBox x:Name="IncassoTextBox" />
            <Button Content="Aggiungi Incasso" Click="AggiungiIncassi_Click" />
        </StackPanel>
    </Grid>
</Window>
