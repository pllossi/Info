<Window x:Class="RistoranteWPF.Prenotazioni"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RistoranteWPF"
        mc:Ignorable="d"
        Title="Prenotazioni" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnPrenota" Content="Prenota" HorizontalAlignment="Center" Height="86" Margin="0,0,0,35" VerticalAlignment="Bottom" Width="256" Click="btnPrenota_Click"/>
        <Label x:Name="lblDatiRistorante" Content="Ristorante" Height="70" VerticalAlignment="Top"/>
        <Label Content="Numero di coperti da prendere " HorizontalAlignment="Left" Margin="35,0,0,50" VerticalAlignment="Center"/>
        <TextBlock x:Name="txtNumeroCoperti" HorizontalAlignment="Left" Margin="244,179,0,0" TextWrapping="Wrap" Text="1-4" VerticalAlignment="Top" Height="26" Width="359" GotFocus="DeleteContent"/>
    </Grid>
</Window>
