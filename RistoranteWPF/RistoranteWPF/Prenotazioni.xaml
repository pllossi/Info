<Window x:Class="RistoranteWPF.Prenotazioni"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RistoranteWPF"
        mc:Ignorable="d"
        Title="Prenotazioni" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="198*"/>
            <RowDefinition Height="19*"/>
        </Grid.RowDefinitions>
        <Button x:Name="btnPrenota" Content="Prenota" HorizontalAlignment="Center" Height="86" Margin="0,313,0,0" VerticalAlignment="Top" Width="256" Click="btnPrenota_Click" Grid.RowSpan="2"/>
        <Label x:Name="lblDatiRistorante" Content="Ristorante" Height="70" VerticalAlignment="Top"/>
        <Label Content="Numero di coperti da prendere " HorizontalAlignment="Left" Margin="35,179,0,0" VerticalAlignment="Top"/>
        <Slider x:Name="sldNumeroPosti" HorizontalAlignment="Left" Margin="314,183,0,0" VerticalAlignment="Top" Width="120" Maximum="4" Minimum="1" TickFrequency="1" TickPlacement="BottomRight" SmallChange="1" Interval="1"/>
    </Grid>
</Window>
