<Window x:Class="GestioneNegoziWPF.StatisticheWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Statistiche" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Seleziona Negozio:" />
            <ComboBox x:Name="NegozioComboBox" />

            <Button Content="Visualizza Statistiche" Click="VisualizzaStatistiche_Click" />
            <TextBlock x:Name="IncassoTotaleTextBlock" />
            <TextBlock x:Name="IncassoMedioTextBlock" />
            <TextBlock x:Name="GiorniChiusuraTextBlock" />
        </StackPanel>
    </Grid>
</Window>
