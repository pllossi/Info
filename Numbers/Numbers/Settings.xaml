<Window x:Class="Numbers.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Numbers"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="800">
    <Grid>
        <Label Content="Maximum number" HorizontalAlignment="Left" Height="28" Margin="221,127,0,0" VerticalAlignment="Top" Width="113"/>
        <Label Content="Settings" HorizontalAlignment="Center" Height="36" Margin="0,45,0,0" VerticalAlignment="Top" Width="82" FontSize="20"/>
        <TextBox x:Name="txtNumbers" HorizontalAlignment="Left" Height="28" Margin="377,127,0,0" TextWrapping="Wrap" Text="Insert the number" VerticalAlignment="Top" Width="123" GotFocus="txtNumbers_GotFocus" TextChanged="txtNumbers_TextChanged" VerticalContentAlignment="Center" />
        <CheckBox x:Name="chcEven" Content="Only Even Numbers" HorizontalAlignment="Left" Height="15" Margin="377,202,0,0" VerticalAlignment="Top" Width="130"/>
        <Button x:Name="btnBack" Content="Back" HorizontalAlignment="Left" Height="44" Margin="543,324,0,0" VerticalAlignment="Top" Width="148"/>

    </Grid>
</Window>
